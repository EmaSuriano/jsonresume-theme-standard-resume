{{#resume.basics}}
<section>
	<h2>Contact Information</h2>
	<div class="contact">
		{{#if website}}
		<p>
			<span>Website:</span>
			<a href="{{website}}" target="_blank" rel="noopener">{{website}}</a>
		</p>
		{{/if}}

		{{#if email}}
		<p>
			<span>Email:</span>
			<a href="mailto:{{email}}" target="_blank" rel="noopener noreferrer">{{email}}</a>
		</p>
		{{/if}}
		{{#if phone}}
		<p>
			<span>Phone: </span>
			{{phone}}
		</p>
		{{/if}}
	</div>


</section>
{{/resume.basics}}